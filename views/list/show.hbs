<h1>{{list.title}}</h1>
<p>{{list.description}}</p>
<br>
<br>
<div class="container">
    {{#if list}}
    <div>
        {{#each list.movies}}
        <div>
            <p> Title: {{title}}</p>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

</div>
<a href="/list/{{list.id}}/newmovie"> Add Movie</a>
</div>



<form action="/list/{{list.id}}/edit">
    <p>
        <input type="submit" value="Edit List">
    </p>
</form>

<form action="/list/{{list.id}}?_method=DELETE" method="post">
    <input type="submit" value="Delete">
</form>

<form action="/">
    <input type="submit" value="Home">
</form>

